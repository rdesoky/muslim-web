{
    "editor.formatOnSave": true,
    "git.enableSmartCommit": true,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "editor.insertSpaces": false,
    "prettier.tabWidth": 4,
    "editor.detectIndentation": false,
    "editor.renderWhitespace": "all",
    "editor.useTabStops": false,
    "eslint.alwaysShowStatus": true
}
